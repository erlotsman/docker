pipeline{    
    
    agent any

    parameters {                                        
        string(
            name: 'basic',
            defaultValue: '',
            description: 'basic deploy')
    }

    options {
        buildDiscarder(logRotator(numToKeepStr: '30')) 
        timeout(time: 1, unit: 'HOURS')               
    }
    
    environment {
        ARTIFACTORY = credentials('DockerHub')
    }

    triggers {
        GenericTrigger(
            causeString: 'Generic Cause', 
            regexpFilterExpression: '', 
            regexpFilterText: '', 
            token: '12345'
        )
    }
  
    stages {
        stage('Check scm') {
            steps {
                git([
                    url: "https://github.com/erlotsman/docker",
                    branch: 'master'
                ])
            }    
        }
        stage("A"){
            steps{
                echo "========executing A========"
            }
            post{
                always{
                    echo "========always========"
                }
                success{
                    echo "========A executed successfully========"
                }
                failure{
                    echo "========A execution failed========"
                }
            }
        }
    }
    post{
        always{
            echo "========always========"
        }
        success{
            echo "========pipeline executed successfully ========"
        }
        failure{
            echo "========pipeline execution failed========"
        }
    }
}
