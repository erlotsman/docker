pipeline{    
    
    agent {
        node {
            withDockerServer([credentialsId: 'cert', uri: 'tcp://3.20.118.83:4342']) {
                 docker.image('mysql:5').withRun('-p 3306:3306')
            }
        }    
    }

    parameters {                                        
        string(
            name: 'basic',
            defaultValue: '',
            description: 'basic deploy')
    }

    options {
        buildDiscarder(logRotator(numToKeepStr: '30')) 
        timeout(time: 1, unit: 'HOURS')               
    }
    
    environment {
        ARTIFACTORY = credentials('DockerHub')
    }

    triggers {
        GenericTrigger(
            causeString: 'Generic Cause', 
            regexpFilterExpression: '', 
            regexpFilterText: '', 
            token: '12345'
        )
    }
  
    stages {
        stage('Check scm') {
            steps {
                git([
                    url: "https://github.com/erlotsman/docker",
                    branch: 'master'
                ])
                echo "successfully"
            }    
        }
    }
    post{
        always{
            echo "========always========"
        }
        success{
            echo "========pipeline executed successfully ========"
        }
        failure{
            echo "========pipeline execution failed========"
        }
    }
}
