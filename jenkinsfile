pipeline{    
    
    agent any

    parameters {                                        
        string(
            name: 'basic',
            defaultValue: '',
            description: 'basic deploy')
    }

    options {
        buildDiscarder(logRotator(numToKeepStr: '30')) 
        timeout(time: 1, unit: 'HOURS')               
    }
    
    environment {
        ARTIFACTORY = credentials('DockerHub')
    }

    triggers {
        GenericTrigger(
            causeString: 'Generic Cause', 
            regexpFilterExpression: '', 
            regexpFilterText: '', 
            token: '12345'
        )
    }
       
    stages {
        stage('Check scm') {
            steps {
                git([
                    url: "https://github.com/erlotsman/docker",
                    branch: 'master'
                ])
            }    
        }
        stage('Run mysql') {
            steps {
                script {
                    docker.withServer([credentialsId: 'cert', uri: 'tcp://3.20.118.83:4342']) {
                       def image = docker.image('mysql:5').pull()
                    }
                }    
            }            
        }
    }           
}
